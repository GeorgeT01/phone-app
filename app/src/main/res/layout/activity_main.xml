<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorAccent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/phone_number_edittext"
                android:text=""
                android:gravity="center_horizontal|center_vertical"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="50sp"
                android:maxLines="1"
                android:autoSizeStepGranularity="2sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/montserrat"
                tools:ignore="UnusedAttribute" />

        <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@color/colorPrimary">

              <Button
                  android:id="@+id/btnOne"
                  android:layout_width="75dp"
                  android:layout_height="75dp"
                  android:layout_margin="10dp"
                  android:background="@drawable/round_button"
                  android:gravity="center_vertical|center_horizontal"
                  android:text="1"
                  android:textSize="30sp"
                  app:fontFamily="@font/montserrat"
                  android:textColor="@color/colorBlack"
                  tools:ignore="ButtonStyle" />

              <Button
                  android:id="@+id/btnTwo"
                  android:layout_width="75dp"
                  android:layout_height="75dp"
                  android:layout_margin="10dp"
                  android:background="@drawable/round_button"
                  android:gravity="center_vertical|center_horizontal"
                  android:text="2"
                  android:textSize="30sp"
                  app:fontFamily="@font/montserrat"
                  android:textColor="@color/colorBlack"
                  tools:ignore="ButtonStyle" />

              <Button
                  android:id="@+id/btnThree"
                  android:layout_width="75dp"
                  android:layout_height="75dp"
                  android:layout_margin="10dp"
                  android:background="@drawable/round_button"
                  android:gravity="center_vertical|center_horizontal"
                  android:text="3"
                  android:textSize="30sp"
                  app:fontFamily="@font/montserrat"
                  android:textColor="@color/colorBlack"
                  tools:ignore="ButtonStyle" />

          </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorPrimary">
            <Button
                android:id="@+id/btnFour"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="4"
                android:textSize="30sp"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorBlack"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btnFive"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="5"
                android:textSize="30sp"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorBlack"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btnSix"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="6"
                android:textSize="30sp"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorBlack"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorPrimary">
            <Button
                android:id="@+id/btnSeven"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="7"
                android:textSize="30sp"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorBlack"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btnEight"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="8"
                android:textSize="30sp"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorBlack"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btnNine"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="9"
                android:textSize="30sp"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorBlack"
                tools:ignore="ButtonStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorPrimary">
            <Button
                android:id="@+id/btnAsterisk"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/asterisk_button_layer_list"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="30sp"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorBlack"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btnZero"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_button"
                android:text="0\n+"
                android:textSize="30sp"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorBlack"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btnHashtag"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/square_button_layer_list"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="30sp"
                app:fontFamily="@font/montserrat"
                android:textColor="@color/colorBlack"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorPrimary">
            <Button
                android:id="@+id/copyBtn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/copy_button_layer_list"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="30sp"
                android:textColor="@color/colorBlack"
                android:visibility="invisible"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/dialBtn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/dail_button_layer_list"
                android:gravity="center"
                app:fontFamily="@font/montserrat"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/backspaceBtn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/backspace_button_layer_list"
                android:gravity="center_vertical|center_horizontal"
                app:fontFamily="@font/montserrat"
                android:textSize="30sp"
                android:visibility="invisible"
                android:textColor="@color/colorBlack"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>